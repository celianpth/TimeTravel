<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.timetravel.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home"
        android:background="#eee6cf"/>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.timetravel.ui.dashboard.DashboardFragment"
        android:label="title_parametres"
        tools:layout="@layout/fragment_dashboard"
        android:background="#eee6cf"/>

    <fragment
        android:id="@+id/navigation_sign_up"
        android:name="com.example.timetravel.SignUpActivity"
        android:background="#eee6cf"
        android:label="@string/title_sign_up"
        tools:layout="@layout/sign_up" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.timetravel.ui.notifications.NotificationsFragment"
        android:label="@string/title_messagerie"
        tools:layout="@layout/fragment_notifications"
        android:background="#eee6cf"/>
</navigation>